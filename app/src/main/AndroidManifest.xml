<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.ene.lab.obervablescrollers.sample">

    <application
        android:name=".OBS"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.ObsScrollViewActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="im.ene.lab.obervablescrollers.sample.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ObsRecyclerViewActivity"
            android:label="@string/title_activity_obs_recycler_view"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="im.ene.lab.obervablescrollers.sample.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ObsListViewActivity"
            android:label="@string/title_activity_obs_list_view"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="im.ene.lab.obervablescrollers.sample.ui.MainActivity" />
        </activity>
    </application>

</manifest>
